{
  "name": "crystal-screen-share",
  "version": "2.0.0",
  "description": "Crystal Screen Share - HTML5 WebRTC-based screen sharing application",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "webpack --mode production",
    "build:turbo": "webpack --mode production --progress",
    "dev:webpack": "webpack --mode development --watch",
    "dev:turbo": "webpack --mode development --watch --progress",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:turbo\"",
    "clean:cache": "rm -rf .webpack_cache",
    "install:all": "npm install"
  },

  "keywords": [
    "screen-sharing",
    "webrtc",
    "react",
    "crystal-ui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "nodemon": "^3.0.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
